<div class="col-md-3">
  <h2>REGISTROS</h2>
</div>

<div>
  <table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">NOME</th>
      <th scope="col">SOBRENOME</th>
      <th scope="col">DATA DE NASCIMENTO</th>
      <th scope="col">CPF</th>
      <th scope="col">RG</th>
      <th scope="col">E-MAIL</th>
      <th scope="col">TELEFONE</th>
      <th scope="col">CARGO</th>     
      <th scope="col">AÇÃO</th>     
    </tr>
  </thead>
  <tbody>
    <% data.forEach(function(details) { %>
      <tr>
          <td><%= details.nome %></td>
          <td><%= details.sobrenome %></td>
          <td><%= details.data_nascimento %></td>
          <td><%= details.cpf %></td>
          <td><%= details.rg %></td>
          <td><%= details.email %></td>
          <td><%= details.telefone %></td>
          <td><%= details.cargo %></td>
          <td><a href="/edit/editar_funcionario.ejs/<%= details._id %>" class="btn btn-secondary">Editar</a> - <a href="/delete-funcionario/<%= details._id %>" class="btn btn-danger" onclick="return confirm('Deseja mesmo excluir?')">Excluir</a></td>
      </tr>
      <% }) %>
  </tbody>
</table>
</div>

  <a href="/cadastro/cadastrar_funcionario.ejs" class="btn btn-primary">Novo</a>
  <a href="/" class="btn btn-secondary">Voltar</a>

