<div class="col-md-3">
  <h2>ESTOQUE</h2>
</div>

<div>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">NOME</th>
        <th scope="col">TIPO</th>
        <th scope="col">DESCRIÇÃO</th>
        <th scope="col">CODIGO DE BARRAS</th>
        <th scope="col">PREÇO</th>
        <th scope="col">FABRICANTE</th>
        <th scope="col">DATA DE FABRICAÇÃO</th>
        <th scope="col">PESO</th>     
        <th scope="col">AÇÃO</th>     
      </tr>
    </thead>    
    <tbody>
    <% data.forEach(function(details) { %>
        <tr>
            <td><%= details.nomep %></td>
            <td><%= details.tipo %></td>
            <td><%= details.descricao %></td>
            <td><%= details.codigo_barras %></td>
            <td><%= details.preco %></td>
            <td><%= details.fabricante %></td>
            <td><%= details.data_fabricacao %></td>
            <td><%= details.peso %></td>            
            <td><a href="/edit/editar_produto.ejs/<%= details._id %>" class="btn btn-secondary">Editar</a> - <a href="/delete-produto/<%= details._id %>" class="btn btn-danger" onclick="return confirm('Deseja mesmo excluir?')">Excluir</a></td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</div>
  <a href="/cadastro/cadastrar_produto.ejs" class="btn btn-primary">Novo</a>
  <a href="/" class="btn btn-dark">Voltar</a>

