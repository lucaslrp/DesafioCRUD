<h2>Editar Registro</h2>
  <% data.forEach(function(details) { %>
      <form action="/edit/editar_produto.ejs/<%= details._id %>" method="POST">
        <div class="form-group">
          <div class="col-md-3">
            <label for="name">Nome</label>
            <input type="text" class="form-control" value="<%= details.nomep %>" name="nomep">
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-3">
            <label for="type">Tipo</label>
            <input type="text" class="form-control" value="<%= details.tipo %>" name="tipo"> 
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-3">
            <label for="description">Descrição</label>
            <input type="text" class="form-control" value="<%= details.descricao %>" name="descricao">
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-3">
            <label for="barcode">Código de Barras</label>
            <input type="text" class="form-control" value="<%= details.codigo_barras %>" name="codigo_barras">
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-3">
            <label for="price">Preço</label>
            <input type="text" class="form-control" value="<%= details.preco %>" name="preco">
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-3">
            <label for="manufacturer">Fabricante</label>
            <input type="text" class="form-control" value="<%= details.fabricante %>" name="fabricante">
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-3">
            <label for="manufacturingDate">Data de Fabricação</label>
            <input type="date" class="form-control" value="<%= details.data_fabricacao %>" name="data_fabricacao">
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-3">
            <label for="weight">Peso</label>
            <input type="text" class="form-control" value="<%= details.peso %>" name="peso"> 
          </div>
        </div>   
      <div class="col-md-3">
        <button type="submit" class="btn btn-success">Confirmar</button>
        <a href="/show/listar_produto.ejs" class="btn btn-secondary">Voltar</a>
      </div>               
    </form>
    <% }) %>
  

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
