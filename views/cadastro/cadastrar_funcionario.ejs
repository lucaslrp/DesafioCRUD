    <div class="col-md-3">
      <h1>Cadastrar Funcionário</h1>
    </div>
    
 
    <form action="/show/listar_funcionario.ejs" method="POST">
      <div class="form-group">
        <div class="col-md-3">
           <label for="name">Nome</label> 
            <input type="text" class="form-control" placeholder="Nome" name="nome">
        </div>        
      </div>
      <div class="form-group">
        <div class="col-md-3">
          <label for="surname">Sobrenome</label>
          <input type="text" class="form-control" placeholder="Sobrenome" name="sobrenome">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-3">
          <label for="birthday">Data de Nascimento</label>
          <input type="date" class="form-control" placeholder="Data de Nascimento" name="data_nascimento">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-3">
          <label for="cpf">CPF</label>
          <input type="text" class="form-control" name="cpf" \ pattern="\d{3}\.?\d{3}\.?\d{3}-?\d{2}" \ placeholder="xxx.xxx.xxx-xx">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-3">
          <label for="rg">RG</label>
          <input type="text" class="form-control" name="rg" \ pattern="\d{2}\.?\d{3}\.?\d{3}-?\d{2}" \ placeholder="xx.xxx.xxx-xx">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-3">
          <label for="email">E-mail</label>
          <input type="email" class="form-control" placeholder="exemplo@provedor" name="email">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-3">
          <label for="telephone">Telefone</label>
          <input type="tel" class="form-control" placeholder="(xx)9xxxx-xxxx" name="telefone">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-3">
          <label for="job">Cargo</label>
          <input type="text" class="form-control" placeholder="cargo" name="cargo">
        </div>
      </div>
        <div class="col-md-3">
          <button type="submit" class="btn btn-success">Salvar</button>
          <a href="/" class="btn btn-secondary my-2">Voltar</a>   
        </div>               
      </form>

       
